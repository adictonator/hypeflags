div.twitt_popup .tweet_flag_wrap {
  position:static;
  transform:none;
  -webkit-transform:none;
}
.twitt_popup .tweet_flag_wrap {
  padding: 30px 40px;
}

div#tweet_result img {
  border-radius: 0;
}

.tweet_flag_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0px 28px;
  background: #ebebeb;
  width: 100%;
  position: absolute;
  z-index: 1;
  flex-direction: column;
  
  .tweet_flag_box {
    position: relative;
    width: 100%;
    background: #fff;
    box-shadow: 2px 4px 20px rgba(0,0,0,0.15);
    margin-bottom: 40px;

    &:after {
      display: block;
      content: "";
      padding-bottom: 60%;
    }

    .tweet_flag_box_inner {
      position: absolute;
      width: calc(100% - 30px);
      height: calc(100% - 30px);
      top: 15px;
      left: 15px;
      display: flex;
      align-items: center;
      justify-content: center;

      .twitt_head {
        display: flex;
        position: relative;
        align-items: flex-start;

        .twitt_u_img {
          max-width: 50px;
          max-height: 50px;
          overflow: hidden;
          border-radius: 50px;

          img{
            width: 100%;height: 100%;object-fit: cover;
          }
        }

        .twitt_u_info {
          display: flex;
          flex-direction: column;
          padding-left: 10px;
          line-height: 1.4;
          justify-content: center;
          margin-right: 5px;

          strong {
            display: flex;
            width: 100%;
            color: #000;
            
            a {
              color: #1da1f2;
              font-size: 19px;
              display: inline-block;
              margin: 0px 0 0 2px;
              line-height: 1;
              position: relative;
              top: 3px;
            }

            svg {
              width: 20px;
              margin-left: 5px;
              max-width: 20px;
              height: 20px;

              path {
                fill: rgba(29,161,242,1.00);
              }
            }
          }

          em {
            color: rgb(91, 112, 131);
            font-style: normal;
            font-weight: normal;
            line-height: 1.2;
          }
        }
      }
    }

    &.theme_dark {
      background: #17202a;
      
      span.dot {
        color: rgb(136,153,166);
      }
      
      .twitt_head {
        .twitt_u_info {
          .userName {
            color: rgb(136,153,166);
          }
          strong {
            color: #fff;
          }
          svg {
            path {
              fill: #fff !important;
            }    
          }
        }
      }

      .tweet_content {
        .tweet_time, 
        .tweet_action_count li a,
        .tweet_reactions > div span {
          color: rgb(136,153,166);
        }
        
        #twitterText,
        #editable_text {
          color: #fff;
        }
        
        .tweet_reactions {
          border-top: 1px solid rgb(47, 51, 54);
          
          strong {
            color: #fff;
          }
        }
        
        .tweet_action_count {
          border-top: 1px solid rgb(47, 51, 54);
          
          svg {
            path {
              fill: rgb(136, 153, 166);
            }    
          }
        }
      }
    }
    
    @media(max-width:767px) {
      margin-bottom: 20px;
    }
  }
  
  .t_popup_toggle {
    background: #fff;
    
    @media(max-width:767px) {
      font-size: 12px;
    }
  }
}

.upper_dots, .bottom_dots {
  width: 100%;
  z-index: 3;
  position: absolute;
  height: 100%;
  pointer-events: none;
}
.upper_dots:after, .upper_dots:before, 
.bottom_dots:after, .bottom_dots:before {
  display: block;
  content: "";
  width: 1.91%;
  height: 3.18%;
  background: #d8d8d8;
  border-radius: 50%;
  position: absolute;
  top: 5px;
  left: 5px;
  border: 2px solid #d9cc8f;
}
.upper_dots:after,.bottom_dots:after {
  right: 5px;
  top: 5px;
  left: auto;
}
.bottom_dots:after,.bottom_dots:before {
  bottom: 5px;
  top: auto;
}
.bottom_dots {
  bottom: 0;
}
.twitter_wrapper {
  /*transform-origin: center center; */
  text-align: left;
}

.tweet_theme_box {
  margin: 20px 0 0;
}
.t_theme_choice {
  display: flex;
  justify-content: space-between;
  
  label {
    flex: 1;
    
    &:not(:last-of-type) {
      margin-right: 20px;
    }
    
    &:hover {
      span:after {
        box-shadow: 0 0 0px 10px rgba(0,0,0,0.1);
      }
    }
        
    input {
      opacity: 0;
      position: absolute;
      
      &:checked + span {
        border-color: #2aa3ef;
        
        &:before {
          background-color: #1da1f2;
          background-image: url(//cdn.shopify.com/s/files/1/0254/3868/3184/t/41/assets/twitter-tick.svg?v=7479676910424509310);
          border-color: #1da1f2;
        }
      }
    }
    
    span {
      display: flex;
      align-items: center;
      width: 100%;
      padding: 12px 20px;
      background: transparent;
      border-radius: 4px;
      position: relative;
      cursor: pointer;
      border: 2px solid #898f94;
      font-weight: bold;
      font-size: 17px;

      &:before {
        content: '';
        display: flex;
        height: 20px;
        width: 20px;
        border-radius: 50px;
        background: transparent;
        border: 2px solid #898f94;
        align-items: center;
        justify-content: center;
        transition: background 200ms linear, box-shadow 200ms linear;
        margin-right: 15px;
        
        svg {
          path {
            fill: #ffffff;
          }
        }
      }
      
      @media(max-width:767px) {
        font-size: 12px;
        padding: 8px 18px;
        margin-right: 10px;
      }
    }
    
    &.t_dark_mode {
      &:hover {
        span:after {
          box-shadow: 0 0 0px 10px rgba(255,255,255,0.1);
        }
      }
      
      input:checked + span {
        border-color: #2aa3ef;
      }
      
      span {
        background: #15202b;
        border-color: #898f94;
        color: #fff;
      }
    }
  }
}

