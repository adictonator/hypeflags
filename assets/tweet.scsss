/* My responsive style
==================================================*/
@media screen and (max-width: 991px) and (min-width: 768px) {
  .t_theme_choice label span {
    padding: 12px 5px 12px 38px;
    font-size: 15px;
  }
  .t_theme_choice label span:after {
    height: 20px;
    width: 20px;
    left: 10px;
    margin-top: -10px;
  }
  .t_theme_choice label {
    width: 49%;
  }
}
@media only screen and (max-width:767px){
  .tweet_flag_wrap {
    padding: 0px 17px;
  }
  .twitt_popup .tweet_flag_wrap {
    padding: 20px 20px;
  }
  .t_popup_save {
    margin: 20px -20px -25px;
    padding: 20px 20px;
  }
  .twitt_popup_inner {
    padding: 25px 20px;
  }
  .twitt_p_head {
    padding: 0 0 20px;
    margin: 0 0 20px;
  }
  .t_p_save, .close_t_popup {
    min-width: 120px;
  }
  .custom-product--info h3, 
  .custom-product--info .h3 {
    text-align: left;
  }
  div#shopify-section-product_tweet-template .main_product_slider {
    margin: 0 0 20px;
  }
  div#shopify-section-product_tweet-template {
    padding: 20px 0 0;
  }
  .product-desc.visible_mobile {
    display: block;
    text-align: center;
    padding: 0 0 20px;
  }
  .product-desc.visible_mobile .price__align {
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }
  .hide_mobile {
    display:none;      
  }
}

