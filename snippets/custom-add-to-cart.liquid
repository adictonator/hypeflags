{% capture "form_classes" -%} flex flex-col relative gap-y-4 md:my-4 my-5
lg:my-5 xl:my-6 {%- endcapture %}
<!-- prettier-ignore -->
{% if product.id == 4597274214473 %}
	{% assign prodType = 'tweet' %}
{% else %}
	{% assign prodType = 'custom' %}
{% endif %}

{% form 'product', product, class:form_classes, novalidate:
'novalidate', data-product-form: '', data-product-form-redirect-url: '/cart' %}

<div class="flex items-stretch justify-between gap-x-4">
	<div class="flex items-stretch justify-between">
		<button
			type="button"
			disabled
			data-qty="sub"
			class="flex h-auto w-8 items-center justify-center rounded bg-gray-100 px-2 text-black disabled:cursor-not-allowed disabled:text-gray-400"
		>
			<svg
				class="h-full w-full fill-current"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-width="2"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M18 12H6"
				/>
			</svg>
		</button>
		<input
			type="number"
			id="Quantity-{{ section.id }}"
			name="quantity"
			value="1"
			min="1"
			class="w-12 border-none text-center text-sm outline-none"
			pattern="[0-9]*"
			data-quantity-input
		/>
		<button
			type="button"
			data-qty="add"
			class="flex h-auto w-8 items-center justify-center rounded bg-gray-100 px-2"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="#000"
				class="pointer-events-none h-full w-full"
				viewBox="0 0 24 24"
				stroke="currentColor"
				stroke-width="2"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M12 6v6m0 0v6m0-6h6m-6 0H6"
				/>
			</svg>
		</button>
	</div>

	<button
		type="submit"
		name="add"
		disabled="disabled"
		class="primary-btn flex items-center justify-center gap-x-2"
		data-add-to-cart="{{ prodType }}"
	>
		{{ "products.product.add_to_cart" | t }}
		<svg
			xmlns="http://www.w3.org/2000/svg"
			class="hidden h-5 w-5 animate-spin"
			viewBox="0 0 20 20"
			fill="currentColor"
		>
			<path
				fill-rule="evenodd"
				d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
				clip-rule="evenodd"
			/>
		</svg>
	</button>
</div>

<span class="block text-center text-sm text-[#FFA800] lg:text-base xl:text-lg"
	>&bull; Made To Order | Will Ship In 5-7 Days</span
>
{% endform %}
