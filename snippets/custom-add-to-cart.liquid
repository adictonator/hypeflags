{% capture "form_classes" -%}
flex flex-col relative gap-y-4 my-6 after:content-[attr(ship-line)] after:relative after:block after:text-[#FFA800] after:text-center
{%- endcapture %}

{% form 'product', product, class:form_classes, novalidate: 'novalidate', data-product-form: '', data-product-form-redirect-url: '/cart', ship-line: '&bull; Made to order | Will Ship in 5-7 Days' %}

<div class="flex justify-between items-stretch gap-x-4">
	<div class="flex items-stretch justify-between">
		<button type="button" disabled data-qty="minus" class="bg-[#F1F1F1] flex items-center justify-center h-auto rounded w-8 px-2 text-black disabled:text-gray-400 disabled:cursor-not-allowed">
			<svg class="text-xs" class="fill-current stroke-current " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
				<path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
			</svg>
		</button>
		<input type="number" id="Quantity-{{ section.id }}" name="quantity" value="1" min="1" class="text-sm border-none w-12 text-center outline-none" pattern="[0-9]*" data-quantity-input>
		<button type="button" data-qty="add" class="bg-[#F1F1F1] flex items-center justify-center h-auto rounded w-8 px-2">
			<svg xmlns="http://www.w3.org/2000/svg" fill="#000" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
				<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
			</svg>
		</button>
	</div>

	<button type="submit" name="add" disabled="disabled" class="hover:text-brand-red duration-300 bg-brand-red rounded-md w-auto disabled:bg-gray-300 disabled:text-gray-400 disabled:cursor-not-allowed disabled:hover:ring-0 flex-1 text-white py-3.5 cursor-pointer hover:ring-brand-red hover:bg-transparent hover:ring-2 hover:ring-inset" data-add-to-cart>
		<span class="text-sm uppercase font-bold tracking-widest" data-add-to-cart-text>
			{{ 'products.product.add_to_cart' | t }}
		</span>
	</button>
</div>
{% endform %}
