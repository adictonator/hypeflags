<div class="product-template__container"
     id="ProductSection-{{ section.id }}"
     data-section-id="{{ section.id }}"
     data-section-type="product"
     data-enable-history-state="true" 
     > 

  <div class="product-single{% if section.settings.enable_payment_button %} product-single--{{ section.settings.image_size }}-image{% endif %}">      
      <div class="product-single__photos product-slider-wrapper{% if section.settings.image_size == 'full' %} product-single__photos--full{% endif %}">
        <div class="slider-wrapper">
          <div class="main_product_slider swiper product-single-gallery" style="position: relative; height: auto;">
            <div class="skeleton-loader-cust"></div>
            
               {% if product.tags contains 'Newarrival' %}
            	<img src="{{ 'na-badge.svg' | asset_url }}" class="product-badge" />
                {% elsif product.tags contains 'Bestseller' %}
                <img src="{{ 'bs-badge.svg' | asset_url }}" class="product-badge" />
               {% endif %}
            
            
            <div class="slider-for!! swiper-wrapper">
              
              {% for image in product.images %}
              <div class="slider-for__item ex1  swiper-slide" data-src="{{ image.src | product_img_url: 'master' }}">           
                  <img data-index="{{ forloop.index }}" src="{{ image.src | product_img_url: '900x' }}" alt="{{ image.alt }}">
              </div>
              {% endfor %}
            </div>
          </div>

              <div class="swiper product-single-gallery-thumb">
                <div class="swiper-wrapper">
                  {% for image in product.images %}
                    <div class="slider-nav__item swiper-slide">
                      <div class="skeleton-loader-cust"></div>
                      <img src="{{ image.src | product_img_url: 'medium' }}">
                    </div>
                  {% endfor %}
                </div>
              </div>
       	  </div>
        <div class="swiper-pagination"></div>
        </div>

        <div class="product-desc">
          <div class="product-single__meta">

            <h1 class="product-single__title">{{ product.title }}</h1>   
            <div class="product__price">
              {% include 'product-price-new', variant: current_variant %}
            </div>
            
            {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', concierge_install: true, product: product %}
            
            <div class="upload-image-wrapper flex-col p-10 mt-6 flex justify-center items-center rounded gap-y-2.5 ease-in-out duration-300 hover:cursor-pointer">
              <span class="flex justify-between gap-x-2 items-center upload-text ease-in-out duration-300">Drag your image here or <strong> browse</strong></span>
              <span class="text-[#606163] text-sm">&bull; Format jpg or png (max size 9mb)</span>
            </div>
            <input type="file" id="inputImage" name="image" class="canvas_image_upload" style="display:none">
            
            <span class="flex items-center gap-x-2 mt-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                <g opacity="0.5">
                	<path d="M9 1.5C4.8645 1.5 1.5 4.8645 1.5 9C1.5 13.1355 4.8645 16.5 9 16.5C13.1355 16.5 16.5 13.1355 16.5 9C16.5 4.8645 13.1355 1.5 9 1.5ZM9.75 12.75H8.25V8.25H9.75V12.75ZM9.75 6.75H8.25V5.25H9.75V6.75Z" fill="#606163"/>
                </g>
              </svg>
              <span class="text-[#606163] text-sm italic">Please review our <a href="#" class="underline hover:underline" data-cust-flag-modal>custom flag policy</a></span>
            </span>

            {% capture "form_classes" -%}
            flex justify-between items-stretch my-6 gap-x-4
<!--             product-form product-form-{{ section.id }}{% unless section.settings.show_variant_labels %} product-form--hide-variant-labels{% endunless %}{% if section.settings.enable_payment_button and product.has_only_default_variant%} product-form--payment-button-no-variants{% endif %} -->
            {%- endcapture %}

            {% form 'product', product, class:form_classes, novalidate: 'novalidate', data-product-form: '', data-product-form-redirect-url: '/cart' %}
<!--      			<div class="product-form__input-wrap">                         -->
            <div class="flex items-stretch justify-between">
                        <button type="button" disabled data-qty="minus" class="bg-[#F1F1F1] flex items-center justify-center h-auto rounded w-8 px-2">
                          <svg class="text-xs" xmlns="http://www.w3.org/2000/svg" fill="#000" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                          </svg>
                        </button>
                      	<input type="number" id="Quantity-{{ section.id }}" name="quantity" value="1" min="1"
                               class="text-sm border-none w-12 text-center outline-none" pattern="[0-9]*" data-quantity-input>
                        <button type="button" data-qty="add" class="bg-[#F1F1F1] flex items-center justify-center h-auto rounded w-8 px-2">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="#000" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                        </button>
                      </div>
            
            <button type="submit" name="add" disabled="disabled" class="bg-brand-red rounded-md w-auto flex-1
                                                                        text-white
                                                                        py-3 cursor-pointer
                                                                        hover:ring-brand-red hover:bg-transparent
                                                                        hover:ring-2 hover:ring-inset
                                                                        hover:text-brand-red
                                                                        duration-300" data-add-to-cart>
                        <span class="text-sm uppercase font-bold tracking-widest" data-add-to-cart-text>
                          {{ 'products.product.add_to_cart' | t }}
                        </span>
                      </button>
            {% endform %}

            {% render 'product-info' %}
          </div>
      </div>
</div>
</div>

<script> 
    $(document).ready(function(){
      $('.product-accordion-item h3').on('click touch', function(e) {
        e.preventDefault()

        const _this = $(this)

        $(this).parent().find('p, ul').slideToggle('fast', function() {
        	_this.parent().toggleClass('is-collapsed');
        });
      })
      
     $('.b-drop-info').hover(
       function() {
       $(this).addClass('show')
     })
     
     $('.b-drop-info').mouseout(function(e) {
       
       if ( e.relatedTarget && 
           ( $(e.relatedTarget).hasClass('webkit_center') ||
            $(e.relatedTarget).hasClass('product-single__meta') ||
           $(e.toElement) == 'p' )
          ) { 
     		$(this).removeClass('show')
       }
     })
           
  
    });
 
  
</script>
  
    
