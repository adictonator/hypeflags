<div
	class="product-template__container"
	id="ProductSection-{{ section.id }}"
	data-section-id="{{ section.id }}"
	data-section-type="product"
	data-enable-history-state="true"
>
	<div
		class="product-single{% if section.settings.enable_payment_button %} product-single--{{
			section.settings.image_size
		}}-image{% endif %}"
	>
		<div
			class="product-single__photos product-slider-wrapper{% if section.settings.image_size == 'full' %} product-single__photos--full{% endif %}"
		>
			<div class="slider-wrapper">
				<div
					class="main_product_slider _mhh swiper product-single-gallery"
					style="position: relative; height: auto"
				>
					<div class="skeleton-loader-cust"></div>

					{% render 'product-badge', product: product %}

					<div class="slider-for!! swiper-wrapper">
						{% for image in product.images %}
						<div
							class="slider-for__item ex1 swiper-slide"
							data-src="{{
								image.src | product_img_url: 'master'
							}}"
						>
							<img
								data-index="{{ forloop.index }}"
								src="{{ image.src | product_img_url: '900x' }}"
								alt="{{ image.alt }}"
							/>
						</div>
						{% endfor %}
					</div>
				</div>

				<div class="swiper product-single-gallery-thumb max-w-[448px]">
					<div class="swiper-wrapper">
						{% for image in product.images %}
						<div class="slider-nav__item swiper-slide">
							<div class="skeleton-loader-cust"></div>
							<img
								src="{{
									image.src | product_img_url: 'medium'
								}}"
							/>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="swiper-pagination"></div>
		</div>

		<div class="product-desc">
			<div class="product-single__meta">
				{% render 'product-meta', product: product %} {% if
				product.selected_or_first_available_variant.inventory_quantity >
				0 %} {% assign bkorder = false %} {% else %} {% assign bkorder =
				true %} {% endif %}

				<div class="product__meta-wrap">
					{% render 'product-info' %}

					<div
						class="webkit_center {% if product.id == 3824189505584 %}custom-product--info{% endif %}"
					>
						{% if bkorder %} {% if product.id != 3824189505584 %} {%
						if section.settings.shipping_text_os != blank %}
						<p class="bo-text">
							{{ section.settings.shipping_text_os }}
						</p>
						{% endif %} {% endif %} {% else %} {% if product.id !=
						3824189505584 %} {% if section.settings.shipping_text !=
						blank %}
						<p>
							<span id="prod-info-tooltip"
								>*Before 2pm EST. If placed after, the order
								will ship the following business day.
								<a
									href="https://hypeflags.com/pages/shipping-handling"
									><em>Our shipping policies</em></a
								>.
							</span>
							{{ section.settings.shipping_text }}
						</p>
						{% endif %} {% endif %} {% endif %}
					</div>

					{% capture "form_classes" -%} product-form product-form-{{ section.id -}}
					{%- unless section.settings.show_variant_labels %}
					product-form--hide-variant-labels {%- endunless -%} {%- if
					section.settings.enable_payment_button and
					product.has_only_default_variant %}
					product-form--payment-button-no-variants {%- endif %} {%-
					endcapture %} {% form 'product', product,
					class:form_classes, novalidate: 'novalidate',
					data-product-form: '', data-product-form-redirect-url:
					'/cart' %}

					<button
						type="submit"
						name="add"
						{%
						unless
						current_variant.available
						%}
						disabled="disabled"
						{%
						endunless
						%}
						class="primary-btn"
						data-add-to-cart
					>
						<span data-add-to-cart-text>
							{% unless current_variant.available %}
							{{ "products.product.sold_out" | t }}
							{% else %}
							{{ "products.product.add_to_cart" | t }}
							{% endunless %}
						</span>
					</button>
					{% endform %}
				</div>
			</div>

			<div class="custom-flag-promo">
				<h3>Looking to customize your own flag?</h3>
				<p>Custom flags for just $18.99</p>
				<a
					href="/products/custom-flag-upload-your-design"
					class="product-custom-flag"
					>Get Started</a
				>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function () {
		$(".b-drop-info").mouseover(function () {
			$("#prod-info-tooltip").show()
		})

		$(".b-drop-info").mouseout(function (e) {
			if (
				e.relatedTarget &&
				($(e.relatedTarget).hasClass("webkit_center") ||
					$(e.relatedTarget).hasClass("product-single__meta") ||
					$(e.toElement) == "p")
			) {
				$("#prod-info-tooltip").hide()
			}
		})

		$("body").click(function (event) {
			if (
				!$(event.target).closest(".b-drop-info").length &&
				!$(event.target).is("#prod-info-tooltip")
			) {
				$("#prod-info-tooltip").hide()
			} else if ($(event.target).closest(".b-drop-info").length > 0) {
				$("#prod-info-tooltip").show()
			}
		})
	})
</script>

