/*================ Mobile nav wrapper ================*/
.mobile-nav-wrapper {
  transform: translateY(-100%);
  position: absolute;
  top: 0;
  left: 0;
  background-color: #fff;
  transition: all .45s cubic-bezier(.29,.63,.44,1);
  display: none;
  overflow: hidden;
  width: 100%;
}
.mobile-nav-wrapper:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-bottom: 1px solid #e4e4e4;
}

.mobile-nav-wrapper.js-menu--is-open {
  display: block;
}

@media (min-width: 767px) {
  .mobile-nav-wrapper.js-menu--is-open {
    display: none;
  }
} 