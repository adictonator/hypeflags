<div
	class="product-template__container"
	id="ProductSection-{{ section.id }}"
	data-section-id="{{ section.id }}"
	data-section-type="product"
	data-enable-history-state="true"
>
	<div class="product-single">
		<div
			class="product-single__photos relative flex aspect-square flex-col items-center justify-center rounded-md bg-stone-100 px-5"
		>
			<div
				id="polo"
				data-twitter-flag
				class="relative aspect-[5/3] w-full select-none overflow-hidden bg-white font-tweet text-sm font-normal shadow-lg dark:bg-[#17202a]"
			>
				<span
					class="before:absolute before:top-2 before:left-2 before:block before:h-1.5 before:w-1.5 before:bg-grommet after:absolute after:top-2 after:right-2 after:block after:h-1.5 after:w-1.5 after:bg-grommet before:sm:h-2.5 before:sm:w-2.5 after:sm:h-2.5 after:sm:w-2.5"
					data-html2canvas-ignore
				></span>
				<span
					class="before:absolute before:bottom-2 before:left-2 before:block before:h-1.5 before:w-1.5 before:bg-grommet after:absolute after:bottom-2 after:right-2 after:block after:h-1.5 after:w-1.5 after:bg-grommet before:sm:h-2.5 before:sm:w-2.5 after:sm:h-2.5 after:sm:w-2.5"
					data-html2canvas-ignore
				></span>
				<div
					class="inner absolute flex h-full w-full items-center justify-center px-5 py-4 lg:px-9 lg:py-5"
				>
					<div class="more-inner w-[461px] min-w-[461px]">
						<div class="flex items-center gap-x-1.5">
							<div>
								<img
									data-t-user-avatar
									src="#"
									alt="pfp"
									class="h-12 w-12 rounded-full object-cover"
								/>
							</div>
							<div class="flex flex-col">
								<span
									class="flex items-center gap-x-1.5 font-bold dark:text-white"
									data-t-user-name
									>HypeFlags {% render 'icon-twitter-badge' %}
								</span>
								<span
									class="text-twitter-gray dark:text-twitter-lightgray"
									data-t-user-handle
									>@HypeFlags</span
								>
							</div>
						</div>
						<p
							data-t-text
							class="my-4 text-2xl font-normal text-black dark:text-white"
						>
							Lorem ipsum dolor sit amet consectetur, adipisicing
							elit. Provident, commodi.
						</p>
						<div
							class="flex items-center gap-x-1 text-twitter-gray dark:text-twitter-lightgray"
						>
							<time data-t-time>6:24 AM</time> &sdot;
							<time data-t-date>January 3, 2021</time> &sdot;
							<span data-t-device class="text-twitter-blue"
								>Twitter for iPhone</span
							>
						</div>
						<div
							class="mt-4 flex gap-x-5 border-t border-b border-[#ebeef0] py-4 px-1.5 text-sm text-twitter-gray dark:border-[#2f3336]"
						>
							<div
								class="font-normal dark:text-twitter-lightgray"
							>
								<strong
									data-t-retweets
									class="mr-1 text-black dark:text-white"
									>0</strong
								>
								Retweets
							</div>
							<div
								class="font-normal dark:text-twitter-lightgray"
							>
								<strong
									data-t-likes
									class="mr-1 text-black dark:text-white"
									>9</strong
								>
								Likes
							</div>
						</div>
						<div
							class="mt-3 flex items-center justify-around text-twitter-gray dark:text-twitter-lightgray"
						>
							{% render 'icon-twitter-reply' %} {% render
							'icon-twitter-retweet' %} {% render
							'icon-twitter-like' %} {% render
							'icon-twitter-share' %}
						</div>
					</div>
				</div>
			</div>

			<button
				data-edit-tweet
				type="button"
				class="secondary-btn absolute bottom-4 w-auto sm:bottom-8 md:py-2 md:px-5 lg:py-3.5 lg:px-8"
			>
				Edit Tweet
			</button>
		</div>

		<div class="product-desc mt-3.5 px-10 sm:mt-10 md:mt-0 md:p-0">
			{% render 'product-meta', product: product %}

			<div id="lmao"></div>

			<div class="mt-6">
				<div class="mb-4 flex items-center justify-between">
					<span class="font-bold">Paste Tweet URL</span>
					<button
						type="button"
						data-tweet-inspiration
						class="cursor-pointerl text-base text-brand-red duration-300 hover:text-stone-600"
					>
						Get Inspiration
					</button>
				</div>
				<div
					data-tweet-url
					class="flex items-center justify-between rounded-md border border-[#e6e6e6] px-5 py-3.5 after:ml-2 after:h-5 after:w-5 after:bg-no-repeat"
				>
					<input
						type="text"
						id="tweet-url"
						class="m-0 w-full text-ellipsis border-none p-0 text-sm outline-none"
						placeholder="https://"
						value="https://twitter.com/HypeFlags/status/1352056877992042497"
						autocomplete="off"
					/>
				</div>
			</div>

			<div class="mt-6">
				<span class="font-bold">Background</span>
				<div
					class="mt-4 flex items-center justify-between gap-x-5 md:gap-x-6"
				>
					<div class="grow">
						<input
							type="radio"
							id="theme-light"
							name="theme"
							value="light"
							class="peer hidden"
							checked
						/>
						<label
							for="theme-light"
							class="flex w-full cursor-pointer items-center gap-x-4 rounded border border-[#6D6D6D] bg-white px-6 py-3.5 duration-300 peer-checked:border-twitter-blue peer-checked:ring-1 peer-checked:ring-twitter-blue peer-checked:child:border-[#2AA3EF] peer-checked:child:bg-twitter-blue peer-checked:child:before:block"
						>
							<span
								class="block h-5 w-5 rounded-full border-2 border-[#8A8F95] duration-300 before:absolute before:hidden before:h-4 before:w-4 before:bg-tick"
							></span>
							<span class="text-base font-medium">Default</span>
						</label>
					</div>
					<div class="grow">
						<input
							type="radio"
							id="theme-dark"
							name="theme"
							value="dark"
							class="peer hidden"
						/>
						<label
							for="theme-dark"
							class="flex w-full cursor-pointer items-center gap-x-4 rounded border border-[#6D6D6D] bg-[#15202B] px-6 py-3.5 duration-300 peer-checked:border-[#2AA3EF] peer-checked:ring-1 peer-checked:ring-twitter-blue peer-checked:child:border-[#2AA3EF] peer-checked:child:bg-[#2AA3EF] peer-checked:child:before:block"
						>
							<span
								class="block h-5 w-5 rounded-full border-2 border-[#8A8F95] duration-300 before:absolute before:hidden before:h-4 before:w-4 before:bg-tick"
							></span>
							<span class="text-base font-medium text-white"
								>Dark Mode</span
							>
						</label>
					</div>
				</div>
			</div>

			{% render 'custom-add-to-cart' %} {% render 'product-info' %}
		</div>
	</div>
</div>

{% unless product == empty %}
<script type="application/json" id="ProductJson-{{ section.id }}">
	{{ product | json }}
</script>
{% endunless %}

