} */
.tweet_content p, #twitterText, #editable_text {
  color: #000;
  margin: 15px 0;
  font-size: 23px;
  letter-spacing: normal !important;
  white-space: pre-wrap;
  /* word-wrap: break-word; */
  font-family: 'Helvetica Neue', sans-serif;
  overflow: visible;
  min-width: 461px;
  width: 461px;
}
.twitt_img {
  border-radius: 20px;overflow: hidden;margin: 0 0 10px;
}
.twitt_img img{
  width: 100%;height: 300px;object-fit: cover;display: block;
}
.twitt_video{
  border-radius: 20px;overflow: hidden;margin: 0 0 10px;
}
.tweet_video_img {
  position: relative;background: #000;
}
.tweet_video_img img{
  width: 100%;height: 300px;object-fit: cover;display: block;
}
.current_views{
  position: absolute;bottom: 15px;left: 21px;color: rgba(255,255,255,.7);
}
.play_tweet_video{
  background: transparent;border: 0;padding: 0;outline: none;position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);cursor: pointer; font-size:90px; color: #fff;
}
.tweet_time{
  color:rgb(91, 112, 131);display: flex;align-items: center;
}
.tweet_reactions{
  display: flex;padding: 15px 5px;border-top: 1px solid #ebeef0;margin-top: 15px;
}
.tweet_reactions > div {
  margin-right: 20px;
}
.tweet_reactions > div strong{
  color:#000000;
}
.tweet_reactions > div span{
  font-weight: normal;color: rgb(91, 112, 131);margin-left: 6px;
}

.tweet_action_count{
  padding: 12px 0 0;
  border-top: 1px solid #ebeef0;
  margin: 0;
  
  ul{
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: space-around;
    line-height: 1;
    
    li {
      text-decoration: none;
      display: flex;
      align-items: center;
      
      svg {
        width: 20px;
        
        path {
          fill: rgb(91, 112, 131);
        }
      }
    }
  }
}

.twitt_popup {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.60);
  z-index: 99999;
  display:none;
  overflow:auto;
}

.twitt_popup.opened{
  display:block;
}
.twitt_popup_inner {
  height: auto;
  max-width: 800px;
  width:95%;
  margin: 20px auto 20px;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
  background: #fff;
  border-radius: 6px;
  -webkit-border-radius: 6px;
  overflow:hidden;
  padding: 25px 30px;
}
.t_popup_save {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: auto;
  background: #f3f3f3;
  margin: 30px -30px -25px;
  padding: 20px 30px;
  flex-direction: row-reverse;
}
.t_p_save, .close_t_popup {
  background: #d5003a;
  color: #fff;
  border: 0;
  padding: 15px 15px;
  line-height: 1;
  min-width: 130px;
  border-radius: 6px;
  text-transform: uppercase;
  cursor: pointer;
  font-weight: bold;
  font-size: 15px;
}
.close_t_popup {
  background: transparent;
  margin: 0 0 0 10px;
  color: #000;
  letter-spacing: 2px;
  border: 1px solid #000;
}
.t_p_save:hover, .close_t_popup:hover{
  background:#000;
  color:#fff!important;
  border-color:#000;
}
.twitt_p_head {
  position: relative;
  text-align: center;
  padding: 0 0 25px;
  margin: 0 0 30px;
  border-bottom: 1px solid #000;
}
.twitt_p_head a {
  position: absolute;
  right: 0;
  top: 0;
  font-weight: normal;
  font-size: 22px;
  color: #d5003a;
}
.twitt_p_head h3 {
  margin: 0;
  font-size: 22px;
  color: #606163;
}

.twitt_popup_inner .tweet_content .editable_text {
  border: 0;
  width: 100%;
  padding: 0;
  resize: none;
  background:transparent;
  outline: none;
  font-family: 'Helvetica Neue', sans-serif;
}

