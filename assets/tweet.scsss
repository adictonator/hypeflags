    height: 40px;
  }
  
  @media(max-width:767px) {
    button.btn.product-form__cart-submit:after {
      font-size: 11px;
    }  
  }


.tweet-url-input {
  display: flex;
  border: 1px solid #ccc;
  border-radius: 4px;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  
  input {
    width: 100%;
    padding: 0;
    border: none;
    font-size: 16px;
    outline: none;
    text-overflow: ellipsis;
    box-shadow: none;
    margin-right: 10px;
    
    @media(max-width:767px) {
      margin-right: 5px;
      font-size: 14px;
    }
  }
  
  @media(max-width: 767px) {
    padding: 8px 10px;
  }
  
  .tooltip {
    display: none;
    color: #d5003a;
    min-width: 250px;
    right: -15px;
    font-size: 0.80rem;
    line-height: 1.3;
    text-align: center;
    padding: 15px;
    border-radius: 8px;
    box-shadow:0 2px 25px rgba(0,0,0,0.25);
    position: absolute;
    top: 82px;
    z-index: 9;
    background: #fff;

    &:after {
      display: block;
      content: '';
      position: absolute;
      border-style: solid;
      border-width: 0 7px 12px 7px;
      border-color: transparent transparent #fff transparent;
      top: -11px;
      right: 33px;
    }
  }
  
  &.success,
  &.error {
    &:after {
      content: '';
      background-color: #2ED35C;
      background-image: url(//cdn.shopify.com/s/files/1/0254/3868/3184/t/41/assets/twitter-tick.svg?v=7479676910424509310);
      display: block;
      min-width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 2px solid transparent;
      background-position: center;
    }
  }
    
  &.error {
    border: 1px solid #d5023a;
    
    &:after {
      background-color: #d5023a;
      background-image: url(//cdn.shopify.com/s/files/1/0254/3868/3184/t/41/assets/twitter-error.svg?v=10943899643636280093);
    }
    
    &:hover .tooltip {
      display: block;
    }
  }
}