<div
	class="cart-wrapper"
	data-section-id="{{ section.id }}"
	data-section-type="cart-template"
>
	{% if cart.item_count > 0 %}
		<form action="/cart" method="post" novalidate class="cart cart-summary-container">
			<div class="cart-item-list">
				<div class="cart-header">
					<h2 class="cart-header__title">
						{{ 'cart.general.title' | t }}: {{ cart.item_count }}
					</h2>
				</div>
				
              	<div class="cart-items">
                  {% for item in cart.items %}
                  <div class="cart__item-wrap">
                      <img
                          class="cart__image"
                          src="{{ item | img_url: '95x95', scale: 2 }}"
                          alt="{{ item.title | escape }}"
                          data-item-url="{{ item.url }}"
                      />
                      <div class="cart__item-info">
                          <div>
                              <a
                                  href="{{ item.url }}"
                                  class="cart__product-title"
                              >
                                  {{ item.product.title }}
                              </a>

                              <div class="cart__meta-text">
                                  {% for p in item.properties %} {% unless p.last == blank %} {% if p.first contains 'Custom Image' %}
                                  <a
                                      href="{{ p.last }}"
                                      class="custom-prod-preview"
                                      >Preview Custom Flag</a
                                  >
                                  {% else %} {{ p.first }}: {% if p.last contains
                                  '/uploads/' %}
                                  <a href="{{ p.last }}">
                                      {{ p.last | split: '/' | last }}
                                  </a>
                                  {% else %} {{ p.last }} {% endif %} {% endif %}
                                  {% endunless %} {% endfor %}
                              </div>
                          </div>

                          <div class="cart__qty-block">
                              <button type="button" data-qty="sub">
                                  <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      fill="#000"
                                      viewBox="0 0 24 24"
                                      stroke="currentColor"
                                      stroke-width="2"
                                  >
                                      <path
                                          stroke-linecap="round"
                                          stroke-linejoin="round"
                                          d="M18 12H6"
                                      ></path>
                                  </svg>
                              </button>
                              <input
                                  class="cart__qty-input"
                                  type="number"
                                  name="updates[]"
                                  id="updates_large_{{ item.key }}"
                                  value="{{ item.quantity }}"
                                  min="0"
                                  pattern="[0-9]*"
                                  data-quantity-item="{{ forloop.index }}"
                              />
                              <button type="button" data-qty="add">
                                  <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      fill="#000"
                                      viewBox="0 0 24 24"
                                      stroke="currentColor"
                                      stroke-width="2"
                                  >
                                      <path
                                          stroke-linecap="round"
                                          stroke-linejoin="round"
                                          d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                                      ></path>
                                  </svg>
                              </button>
                          </div>
                      </div>
                      <div class="cart__action-wrapper">
                          <a
                              href="/cart/change?line={{ forloop.index }}&amp;quantity=0"
                              class="cart__item-remove"
                              aria-label="{{ 'cart.general.remove' | t }} {{ item.product.title }}"
                          >
                              {{ 'times-cross.svg' | asset_url | img_tag }}
                          </a>

                          <div class="cart__item-price" data-id="{{ item.key }}">
                              {{ item.original_price | money }}
                          </div>
                      </div>
                  </div>
                  {% endfor %}
                </div>
			</div>

			<div class="order-summary">
				<div class="cart-header">
					<h2 class="cart-header__title">Order Summary</h2>
				</div>

				<div class="cart__summary-wrap">
					<div class="cart-summary__item">
						{{ 'cart.general.subtotal' | t }}
						<span>{{ cart.total_price | money }}</span>
					</div>
					<div class="cart-summary__item">
						<span style="display: flex; flex-direction: column">
							Discount
							<span style="font-style: italic;font-size: 14px">
								Code: Apply at checkout
							</span>
						</span>
						<span class="gray">&mdash;</span>
					</div>
					<div class="cart-summary__item">
						Shipping & Handling
						<span class="gray">
							{% if cart.total_price > 0 and cart.total_price <=
							2500 %} {% assign remainingAmt = 2500 | minus:
							cart.total_price | divided_by: 100.0 %} {% assign
							shippingText = 'Calculated at checkout' %} {% elsif
							cart.total_price > 2500 %} {% assign shippingText =
							'Free' %} {% endif %} 
                          {%if shippingText == 'Free' %}
                          <span style="color:#d5003a">{{ shippingText }}</span>
                          {% else %}
                          {{ shippingText }}
                          {% endif %}
						</span>
					</div>
					<div class="cart-summary__item">
						Sales Tax <span class="gray">&mdash;</span>
					</div>
				</div>

				<div class="cart-summary__total">
					Estimated Total <span>{{ cart.total_price | money }}</span>
				</div>

				<div class="cart-summary__submit-controls">
					<div style="display: flex; gap: 10px">
						<input
							type="submit"
							name="update"
							class="btn btn--secondary small--hide cart__submit-control"
							value="{{ 'cart.general.update' | t }}"
							style="display: none"
						/>

						<input
							type="submit"
							name="checkout"
							class="btn btn--small-wide cart__submit cart__submit-control"
							value="{{ 'cart.general.checkout' | t }}"
						/>
					</div>
					<span
						>Estimated total may change once delivery address has
						been specified at checkout</span
					>
				</div>
			</div>
		</form>

	{% else %}
	<div class="empty-page-content text-center">
		<h1>{{ 'cart.general.title' | t }}</h1>
		<p class="cart--empty-message">{{ 'cart.general.empty' | t }}</p>
		<div class="cookie-message">
			<p>{{ 'cart.general.cookies_required' | t }}</p>
		</div>
		<a href="/" class="btn btn--has-icon-after cart__continue-btn"
			>{{ 'general.404.link' | t }}{% include 'icon-arrow-right' %}</a
		>
	</div>
	{% endif %}
</div>

{% include 'popup-modal', heading: 'Please wait', content: 'Items are being
prepared for checkout' %}

<script>
	jQuery(function ($) {
		$('.custom-prod-preview').on('click', function (e) {
			e.preventDefault()
			const src = $(this).attr('href')

			$(this).text('Loading...')

			$('<img src="' + src + '" id="__ckck">').load(function () {
				$('body').append(
					'<div class="custom-success-modal var-width"><div class="modal-body"></div></div>'
				)
				$(this).appendTo('.modal-body')
				$(
					'<button class="btn" data-close>Close Preview</button>'
				).appendTo('.modal-body')
			})
		})

		$('body').on('click touch', 'button[data-close]', function () {
			$('.custom-prod-preview').text('Preview Custom Flag')
			$('.custom-success-modal').remove()
		})

		/**
		 * Show custom modal for checkout page redirect.
		 *
		 **/
		//$('form.cart').on('submit', function(e) {
		$('form input[name="checkout"]').on('click', function (e) {
			e.preventDefault()
			const modal = $('.hf-modal')
			const modalBody = modal.find('.hf-modal-body')

			modal.appendTo('body')
			modal.fadeIn({
				complete: function () {
					$(this).css('display', 'flex')
					modalBody.fadeIn({
						start: function () {
							$(this).css('display', 'flex')
						},
						done: function () {
							window.location.href = '/checkout'
						},
					})
				},
			})
		})

		$('.cart__qty-block button').on('click', function () {
			var $button = $(this)
			var oldValue = $button.parent().find('input').val()
			const oldRefVal = $button.parent().find('input').attr('value')
			const _type = $button.data('qty')
            
            $button.attr('disabled', true)

			if (_type == 'add') {
				var newVal = parseFloat(oldValue) + 1
			} else {
				if (oldValue > 1) {
					var newVal = parseFloat(oldValue) - 1
				} else {
					newVal = 1
				}
			}

			$button.parent().find('input').val(newVal)
            $('input[name="update"]').trigger('click')
            
			// why?             
			setTimeout(function () {
				$button.parent().find('input').trigger('change')
                
			}, 500)
		})
	})
</script>

