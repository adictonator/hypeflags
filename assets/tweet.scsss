.twitter_wrapper{
  font-size:15px;
  line-height:1.3125;
  position:relative;
  font-weight: normal; 
  /*   max-width: 650px;
  width: 100%; */
  margin: 0 auto;
  padding: 15px;
  box-sizing: border-box;
  font-family: 'Helvetica Neue', sans-serif;
}

select#theme_color {
  margin: 12px 0 0;
  min-width: 150px;
  outline: none;
  border: 1px solid #ccc;
}
.twitt_popup a.t_popup_toggle {
  display: none;
}

.tweet_content {
  color: #666666;
  line-height: 1.3125;
}
/* .tweet_content p,#twitterText,#editable_text{
color: #000;
margin: 15px 0;
